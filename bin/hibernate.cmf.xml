     <?xml version='1.0' encoding='utf-8'?>
     <!DOCTYPE hibernate-configuration PUBLIC
             "-//Hibernate/Hibernate Configuration DTD 3.0//EN"
             "http://www.hibernate.org/dtd/hibernate-configuration-3.0.dtd">
     <hibernate-configuration>
         <session-factory>
             <!-- Configuraci칩n de Base de Datos -->
             <property name="hibernate.connection.driver_class">com.mysql.cj.jdbc.Driver</property>
             <property name="hibernate.connection.url">jdbc:mysql://localhost:3306/armelectric?useSSL=false&amp;serverTimezone=UTC&amp;allowPublicKeyRetrieval=true</property>
             <property name="hibernate.connection.username">root</property> <!-- Tu usuario MySQL -->
             <property name="hibernate.connection.password"></property> <!-- Tu password MySQL -->

             <!-- Dialecto para MySQL -->
             <property name="hibernate.dialect">org.hibernate.dialect.MySQLDialect</property>

             <!-- Configuraci칩n de Pool de Conexiones (HikariCP, incluido en Hibernate 6) -->
             <property name="hibernate.connection.provider_class">org.hibernate.engine.jdbc.connections.internal.DriverManagerConnectionProviderImpl</property>
             <property name="hibernate.hikari.connectionTimeout">20000</property>
             <property name="hibernate.hikari.maximumPoolSize">5</property>

             <!-- Generaci칩n de Esquema (crea/actualiza tablas autom치ticamente) -->
             <property name="hibernate.hbm2ddl.auto">update</property> <!-- O 'create' para borrar y recrear -->

             <!-- Logging y SQL (para ver queries en consola) -->
             <property name="hibernate.show_sql">true</property>
             <property name="hibernate.format_sql">true</property>
             <property name="hibernate.use_sql_comments">true</property>

             <!-- Mapeo de Entidades (agrega todas tus clases JPA) -->
             <mapping class="Cliente"/>
             <mapping class="Producto"/>
             <mapping class="Pedido"/>
             <mapping class="ItemPedido"/> <!-- Si la tienes -->
             <mapping class="Proveedor"/>  <!-- Si la tienes -->

             <!-- Opcional: Cache y otras props -->
             <property name="hibernate.cache.use_second_level_cache">false</property>
             <property name="hibernate.cache.use_query_cache">false</property>
         </session-factory>
     </hibernate-configuration>
     
